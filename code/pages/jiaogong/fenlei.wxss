/* pages/xuesheng/fenlei.wxss */
.fenlei{
  height: 100%;
  box-sizing: border-box;
  background-color:#f0f0f0;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.left{
 	width:35%;
	border-right: 1px solid #d4d4d4;
	font-size: 16px;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.type-nav{
  position: relative;
	text-align: center;
  line-height: 50px;
  padding: 5px 0;
  height: 50px;
	border-bottom: 1px solid #d4d4d4;
	z-index:10;
}

.selected{
  margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
  font-weight:bold;
}



.right{
  display:flex;
  width:65%;
  padding: 5px;
  flex-direction: column;
  
}

.food {
  display: flex;
  padding: 5px;
  width: 100%;
  flex-direction: row;
}

.f_img {
  width: 35%;
}

.food_img {
  width: 100%;
  border: 1px solid gainsboro;
  border-radius: 5px;
  box-shadow: 0px 2px 2px gainsboro;
}

.food_text {
  width: 65%;
  margin-left: 5px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  padding-left: 5px;
}

.food_name {
  font-size: 16px;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.price {
  font-size: 14px;
  color: red;
}

