/*顶部切换菜单*/

.swiper-tab {
  width: 100%;
  border-bottom: 1px solid gray;
  text-align: center;
  line-height: 31px;
  display: flex;
}

.swiper-tab-list {
  display: inline-block;
  width: 50%;
  color: gray;
  font-size: 16px;
}

.xuanzhong {
  color: black;
  font-weight: bold;
  border-bottom: 3px solid #d7d7d7;
}

.swiper-box {
  width: 100%;
  height: 100%;
  display: block;
  overflow: scroll;
}

/*食物具体信息*/

.slide-image2 {
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

