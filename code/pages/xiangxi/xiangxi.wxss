/*底部菜单*/

.dibu {
  position: fixed;
  bottom: 0px;
  height: 44px;
  width: 100%;
  line-height: 44px;
  color: gray;
  border-top: 1px solid #ddd;
  background-color: white;
  font-size: 16px;
  text-align: center;
}

.navs {
  display: flex;
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 0px;
}

.bt01 {
  width: 100%;
  background-color: darkorange;
  color: white;
  font-size: 16px;
  border-radius: 0;
  height: 44px;
  line-height: 44px;
}

.bt02 {
  width: 100%;
  background-color: tomato;
  color: white;
  font-size: 16px;
  border-radius: 0;
  height: 44px;
  line-height: 44px;
  padding: 0;
